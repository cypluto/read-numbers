#include<iostream>
#include<string>
#include<algorithm>

using namespace std;

//string 字符串插入和删除
void test01()
{
	string str = "hello";

	//插入
	str.insert(1, "111");//从0开始第一个位置前插入
	//h111ello
	cout << "str=" << str << endl;

	//删除
	str.erase(1, 3);//第一个位置起删除三个
	//hello
	cout << "str=" << str << endl;
}

int main()
{
	test01();
	system("pause");
	return 0;
}
